{
  "name": "playtodemo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "build": "echo 'Starting build...' && rm -rf dist && mkdir -p dist && NODE_ENV=production npm run build:client && NODE_ENV=production SSR_BUILD=true npm run build:server && cp client/index.html dist/client/",
    "build:client": "echo 'Building client...' && vite build",
    "build:server": "echo 'Building server...' && vite build --ssr entry-server.jsx",
    "preview": "vite preview",
    "devinstall": "zx ../../devinstall.mjs -- node server.js --dev",
    "lint": "eslint . --ext .js,.jsx --fix"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "history": "^5.3.0",
    "minipass": "^7.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.2"
  }
}
